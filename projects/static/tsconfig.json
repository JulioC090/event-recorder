{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "nodenext",
    "baseUrl": "src",
    "rootDirs": ["src"],
    "outDir": "dist",
    "paths": {
      "@/*": ["*"],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": []
}